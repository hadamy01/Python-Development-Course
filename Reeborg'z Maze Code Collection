def turn_right():
    turn_left()
    turn_left()
    turn_left()
                   
#FIRST METHOD :

while not at_goal():
    if wall_in_front() and right_is_clear():
        turn_right()
        move()
    elif wall_in_front():
        turn_left()
    elif right_is_clear():
        turn_right()
        move()
    else:
        move()
        
#SECOND METHOD :

while not at_goal():
    if right_is_clear():
        turn_right()
        move()
    elif front_is_clear():
        move()   
    else:
        turn_left()
